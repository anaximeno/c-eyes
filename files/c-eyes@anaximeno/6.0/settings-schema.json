{
	"general": {
		"type": "section",
		"description": "General"
	},

	"mode": {
		"type": "combobox",
		"default": "lids",
		"description": "Mode",
		"options": {
			"Lids": "lids",
			"Bulb": "bulb"
		}
	},
	"line-width": {
		"type": "spinbutton",
		"description": "Line Width",
		"default": 2.5,
		"min": 1,
		"max": 5,
		"step": 0.5,
		"units": "px"
	},
	"margin": {
		"type": "spinbutton",
		"default": 8,
		"min": -6,
		"max": 32,
		"step": 2,
		"units": "px",
		"description": "Margin"
	},
	"vertical-padding": {
		"type": "spinbutton",
		"default": 2,
		"min": 0,
		"max": 20,
		"step": 2,
		"units": "px",
		"description": "Padding"
	},
	"repaint-interval": {
		"type": "spinbutton",
		"default": 55,
		"min": 5,
		"max": 200,
		"step": 5,
		"units": "ms",
		"description": "Eye Update Interval",
		"tooltip": "This setting controls the time to redraw the eye again. Lower values (measured in miliseconds) result in smoother animation but require more processing power."
	},
	"repaint-angle": {
		"type": "spinbutton",
		"default": 0.05,
		"min": 0,
		"max": 1,
		"step": 0.05,
		"units": "radians",
		"description": "Eye Update Sensitivity",
		"tooltip": "This setting controls the minimum angle change between mouse movements required to redraw the eye. Lower values (measured in radians) result in smoother animation but require more processing power."
	},
	"activate-by-default": {
		"type": "checkbox",
		"default": false,
		"description": "Start Activated"
	},
	"deactivate-on-fullscreen": {
		"type": "checkbox",
		"default": true,
		"description": "Deactivate On Fullscreen"
	},

	"colors": {
		"type": "section",
		"description": "Colors"
	},

	"eye-clicked-color": {
		"type": "colorchooser",
		"default": "#0c75de",
		"description": "Activated Base Color"
	},
	"iris-clicked-color": {
		"type": "colorchooser",
		"default": "#4077BF",
		"description": "Activated Iris Color"
	},
	"pupil-clicked-color": {
		"type": "colorchooser",
		"default": "#40BEBF",
		"description": "Activated Pupil Color"
	},
	"fill-lids-color-painting": {
		"dependency": "mode=lids",
		"type": "checkbox",
		"default": false,
		"description": "Fill the Colors Inside the Eye"
	},
	"fill-bulb-color-painting": {
		"dependency": "mode=bulb",
		"type": "checkbox",
		"default": false,
		"description": "Fill the Colors Inside the Eye"
	}
}